<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>todo list</title>
    <link rel="stylesheet" href="styles/style.css">
</head>

<body>
    <h1><%= title %></h1> <!-- Access `title` directly -->

    <table>
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Product Name</th>
                <!-- Add more headers as needed -->
            </tr>
        </thead>
        <tbody>
            <% products.forEach(function(product) { %> <!-- Iterate over `products` directly -->
                <tr>
                    <td><%= product.id %></td>
                    <td><%= product.name %></td>
                    <!-- Add more data cells as needed -->
                </tr>
            <% }); %>
        </tbody>
    </table>

</body>

</html>