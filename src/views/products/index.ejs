<%- include('../components/HTMLHEADER', {title: title}) %>
    <div class="container">

        <%- include('../components/headPage', {title: title}) %>

        <a href="/add/" class="btn btn-secondary btn-sm mt-3">+ novo</a>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>id</th>
                    <th>nome</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(function(product) { %>
                    <tr>
                        <td>
                            <%= product.id %>
                        </td>
                        <td>
                            <%= product.name %>
                        </td>
                        
                        <td>
                            <a href="/products/<%= product.id %>" class="btn btn-primary btn-sm"><i class="bi bi-eye-fill"></i></a>
                            <button type="text" class="btn btn-warning btn-sm text-white" disabled><i class="bi bi-pencil-fill"></i></button>
                            <button type="submit" class="btn btn-danger btn-sm" disabled><i class="bi bi-trash-fill"></i></button>
                        </td>
                            
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>

<%- include('../components/HTMLFOOTER') %>